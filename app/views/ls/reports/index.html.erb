<h1>Total Reports</h1>
<div class="table-responive" style="height: 500px !important; overflow: scroll;">
  <table class="table table-striped">
    <thead style="position: sticky; top: 0; background: white;">
      <tr>
        <th scope="col"scope="col">District ID</th>
        <th scope="col">User ID</th>
        <th scope="col">Comment</th>
        <th scope="col">Date</th>
        <th scope="col">Created at</th>
        <th scope="col">Number of cases</th>
      </tr>
    </thead>

    <tbody>
      <% @reports.each do |report| %>
        <tr>
            <td><%= report.district_id %></td>
            <td><%= report.user_id %></td>
            <td><%= report.comment %></td>
            <td><%= report.date %></td>
            <td><%= report.created_at %></td>
            <td><%= report.cases.count %></td>
        </tr>
      <% end %>

    </tbody>
  </table>
</div>

<!-- Confirmed -->
<div class="card">
  <div class="card-body">
    <h5 class="card-title"> Today total number of confirmed cases for <%= current_user.state.titel %></h5>
    <h6><%= @cases.confirmed.where('created_at >=?', Date.today).count %></h6>
  </div>
</div>
